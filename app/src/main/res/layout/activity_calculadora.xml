<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.vaio.calculadora.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="7"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/textView"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:textSize="30sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button22"
                android:layout_weight="1" />

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button21"
                android:layout_weight="1" />

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button20"
                android:layout_weight="1" />

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button19"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:text="C"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btC"
                android:layout_weight="1"
                android:textSize="24sp"
                android:onClick="onClick_C" />

            <Button
                android:text="CE"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btCE"
                android:layout_weight="1"
                android:textSize="24sp"
                android:onClick="onClick_CE" />

            <Button
                android:text="รท"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btDivide"
                android:layout_weight="1"
                android:textSize="24sp"
                android:onClick="onClick_Dividir" />

            <Button
                android:text="ร"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btMultiplica"
                android:layout_weight="1"
                android:textSize="24sp"
                android:onClick="onClick_Multiplicar" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/bt7"
                android:layout_weight="1"
                android:textSize="24sp"
                android:onClick="onClick_7" />

            <Button
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/bt8"
                android:layout_weight="1"
                android:textSize="24sp"
                android:onClick="onClick_8" />

            <Button
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/bt9"
                android:layout_weight="1"
                android:textSize="24sp"
                android:onClick="onClick_9" />

            <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btResta"
                android:layout_weight="1"
                android:textSize="24sp"
                android:onClick="onClick_Resta" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/bt3"
                android:layout_weight="1"
                android:textSize="24sp"
                android:onClick="onClick_3" />

            <Button
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/bt4"
                android:layout_weight="1"
                android:textSize="24sp"
                android:onClick="onClick_4" />

            <Button
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/bt5"
                android:layout_weight="1"
                android:textSize="24sp"
                android:onClick="onClick_5" />

            <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btSuma"
                android:layout_weight="1"
                android:textSize="24sp"
                android:onClick="onClick_Suma" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:text="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/bt1"
                        android:layout_weight="1"
                        android:textSize="24sp"
                        android:onClick="onClick_1" />

                    <Button
                        android:text="2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/bt2"
                        android:layout_weight="1"
                        android:textSize="24sp"
                        android:onClick="onClick_2" />
                </LinearLayout>

                <Button
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/bt0"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:onClick="onClick_0" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:text="3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/bt3"
                        android:layout_weight="1"
                        android:textSize="24sp"
                        android:onClick="onClick_3" />

                    <Button
                        android:text="."
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/btPunto"
                        android:layout_weight="1"
                        android:textSize="24sp"
                        android:onClick="onClick_Punto" />
                </LinearLayout>

                <Button
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btIgual"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:onClick="onClick_Igual" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
